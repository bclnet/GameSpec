<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:t="clr-namespace:TreeView.Maui.Controls;assembly=TreeView.Maui"
             xmlns:views="clr-namespace:GameSpec.App.Explorer.Views"
             x:Class="GameSpec.App.Explorer.Views.FileInfo">
    <ContentView.Resources>
        <views:MetadataInfoToTreeViewNodeConverter x:Key="metadataInfoToTreeViewNode" />
    </ContentView.Resources>
    <Grid>
        <t:TreeView x:Name="Node" ItemsSource="{Binding Path=Infos, Converter={StaticResource metadataInfoToTreeViewNode}}">
            <t:TreeView.ItemTemplate>
                <DataTemplate>
                    <HorizontalStackLayout>
                        <Label Text="{Binding Name}" />
                    </HorizontalStackLayout>
                </DataTemplate>
            </t:TreeView.ItemTemplate>
        </t:TreeView>
    </Grid>
</ContentView>
